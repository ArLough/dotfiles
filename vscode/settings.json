{
    "git.enableSmartCommit": true,
    "debug.onTaskErrors": "debugAnyway",
    "workbench.iconTheme": "gruvbox-material-icon-theme",
    "workbench.editor.highlightModifiedTabs": true,
    "explorer.sortOrder": "type",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,
    "editor.fontSize": 16,
    "editor.fontWeight": 400,
    "terminal.integrated.fontSize": 14,
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.lineHeight": 1.6,
    "workbench.tree.indent": 20,
    "customizeUI.activityBarHideSettings": true,
    "customizeUI.listRowHeight": 30,
    "customizeUI.titleBar": "inline",
    "editor.guides.bracketPairs": "active",
    "customizeUI.activityBar": "top",
    "editor.minimap.showSlider": "always",
    "workbench.list.smoothScrolling": true,
    "editor.fontFamily": "Source Code Pro, Monaco",
    "debug.console.fontFamily": "Source Code Pro, Monaco",
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "terminal.external.osxExec": "Iterm2.app",
    "workbench.activityBar.location": "top",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ff9966",
        "editorCursor.background": "#000000",
        "terminalCursor.foreground": "#66ff99"
      }
    }
